@model IEnumerable<Course>
@{
    ViewBag.Title = "可報名的課程";
}

<h1>可報名的課程</h1>

<style>
    .course {
        border: 1px solid #ddd;
        padding: 15px;
        margin: 10px 0;
        border-radius: 5px;
    }

        .course h2 {
            margin: 0;
            font-size: 20px;
        }

    .btn {
        display: inline-block;
        margin-top: 10px;
        padding: 8px 15px;
        font-size: 14px;
        color: #fff;
        background-color: #28a745;
        text-decoration: none;
        border-radius: 5px;
    }

        .btn:hover {
            background-color: #218838;
        }

    .btn-back {
        display: inline-block;
        margin-top: 10px;
        padding: 8px 15px;
        font-size: 14px;
        color: #fff;
        background-color: #6c757d;
        text-decoration: none;
        border-radius: 5px;
    }

        .btn-back:hover {
            background-color: #5a6268;
        }

    .alert {
        padding: 10px;
        margin-bottom: 15px;
        border: 1px solid transparent;
        border-radius: 5px;
    }

    .alert-error {
        color: #721c24;
        background-color: #f8d7da;
        border-color: #f5c6cb;
    }
</style>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-error">
        @TempData["ErrorMessage"]
    </div>
}

<a href="@Url.Action("StudentProgress", "Enrollment")" class="btn-back">返回</a>

@foreach (var course in Model)
{
    <div class="course">
        <h2>@course.Name</h2>
        <p>@course.Description</p>
        <form method="post" action="@Url.Action("Enroll", "Enrollment")">
            <input type="hidden" name="courseId" value="@course.Id" />
            <button type="submit" class="btn">報名</button>
        </form>
    </div>
}
