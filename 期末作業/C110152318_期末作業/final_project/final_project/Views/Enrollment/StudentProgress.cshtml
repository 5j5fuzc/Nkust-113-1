@using final_project.Models
@model List<Enrollment>

<h2>@ViewBag.StudentName 的課程進度</h2>

<style>
    body {
        font-family: Arial, sans-serif;
        margin: 20px;
    }

    .btn {
        display: inline-block;
        margin-top: 20px;
        padding: 10px 20px;
        font-size: 16px;
        color: #fff;
        background-color: #007bff;
        text-decoration: none;
        border-radius: 5px;
    }

        .btn:hover {
            background-color: #0056b3;
        }

    .alert {
        padding: 10px;
        margin-bottom: 15px;
        border: 1px solid transparent;
        border-radius: 5px;
    }

    .alert-error {
        color: #721c24;
        background-color: #f8d7da;
        border-color: #f5c6cb;
    }

    table {
        width: 100%;
        border-collapse: collapse;
    }

        table th, table td {
            padding: 10px;
            border: 1px solid #ddd;
            text-align: left;
        }

        table th {
            background-color: #f2f2f2;
        }
</style>

@if (!Model.Any())
{
    <p>此學生尚未註冊任何課程。</p>
}
else
{
    <a href="@Url.Action("AvailableCourses", "Enrollment")" class="btn">加入課程</a>
    <table>
        <thead>
            <tr>
                <th>課程名稱</th>
                <th>進度 (%)</th>
                <th>操作</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var enrollment in Model)
            {
                <tr>
                    <td>@enrollment.Course.Name</td>
                    <td>@(enrollment.Progress * 100)</td>
                    <td>
                        <form method="post" action="@Url.Action("DeleteEnrollment", "Enrollment")" style="display:inline;">
                            <input type="hidden" name="enrollmentId" value="@enrollment.Id" />
                            <button type="submit" class="btn" style="background-color: #dc3545;">刪除</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
